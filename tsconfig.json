{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@content/*": ["src/content/*"],
      "@game/*": ["src/game/*"],
      "@scenes/*": ["src/scenes/*"],
      "@ui/*": ["src/ui/*"]
    }
  },
  "include": ["src"]
}
